---
import { getImageUrl } from "../js/backend.mjs"; 
import { Image } from "astro:assets";
const {
    record,
    imageField,
    width = 300,  
    height = 500, 
} = Astro.props;
const imageURL = await getImageUrl(record, imageField);
---

{imageURL && 
    <Image  
        src={imageURL}
        alt={record.nomMaison || 'Image'}
        width={width}
        height={height}
        inferSize={true}
    />
}