---

import { getOffre } from '../../js/backend.mjs';
import Layout from '../../layouts/Layout.astro';
import PBImage from '../../components/PBImage.astro';
        

const { id } = Astro.params;
const offre = await getOffre(id);
---

<Layout titre={offre?.nomMaison}>
    {offre?.images && offre.images.length > 0 && (
        <PBImage record={offre} imageField={offre.images[0]} />
    )}
    <h2>{offre?.nomMaison}</h2>
    <ul>
        <li>{offre?.adresse}</li>
        ...
    </ul>
    <a href="/offres" class="inline-block text-white px-6 py-3 rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg mt-4" style="background-color: #334155;">‚Üê Retournez aux offres</a>
</Layout>